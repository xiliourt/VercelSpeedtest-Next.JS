{
  "version": 2,
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/ping", "dest": "/api/server" },
    { "src": "/download", "dest": "/api/server" },
    { "src": "/upload", "dest": "/api/server" },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "api/server.js": {
      "memory": 512,     
      "maxDuration": 30
    }
  }
}
