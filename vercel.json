{
  "version": 2,
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/ping", "dest": "/api/server" },
    { "src": "/download", "dest": "/api/server" },
    { "src": "/upload", "dest": "/api/server" },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "api/server.js": {
      "memory": 512,      HBO "maxDuration": 30      // Increased memory for buffer generation (default 128MB, max 1024MB on Hobby)
                   // Optional: maxDuration in seconds (Hobby plan default varies, e.g., 10s-60s)
    }
  }
}
